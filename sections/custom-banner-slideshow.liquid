      "label": "Auto Play Duration",
      "id": "auto_play_duration",
      "default": 1000,
      "min": 1000,
      "max": 5000,
      "step": 1000,
      "unit": "sec"
    },
    {
      "type": "checkbox",
      "label": "Show Pagination",
      "id": "show_pagination",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
      "type": "image_picker",
      "label": "Image",
      "id": "image",
      "info": "Image for Desktop"
    },
    {
      "type": "image_picker",
      "label": "Image (Mobile)",
      "id": "image_mobile",
      "info": "Image For Mobile"
    },
    {
      "type": "select",
      "label": "Desktop Content Position",
      "id": "desktop_content_position",
      "default": "middle-center",
      "options": [
        {
          "label": "Top Left",
          "value": "top-left"
        },
        {
          "label": "Top Center",
          "value": "top-center"
        },
        {
          "label": "Top Right",
          "value": "top-right"
        },
        {
          "label": "Middle Left",
          "value": "middle-left"
        },
        {
          "label": "Middle Center",
          "value": "middle-center"
        },
        {
          "label": "Middle Right",
          "value": "middle-right"
        },
        {
          "label": "Bottom Left",
          "value": "bottom-left"
        },
        {
          "label": "Bottom Center",
          "value": "bottm-center"
        },
        {
          "label": "Bottom Right",
          "value": "bottom-right"
        }
      ]
    },
    {
      "type": "select",
      "label": "Desktop Text Allignment",
      "id": "desktop_text_allignment",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ]
    },
      {
        "type":"color_scheme",
        "id":"color_scheme",
        "label":"Color Scheme",
        "default":"background-1"
      },
        {
          "type": "text",
          "label": "Sub Heading",
          "id": "sub_heading",
          "default": "Trendy Classics"
        },
        {
          "type": "text",
          "label": "Heading",
          "id": "heading",
          "default": "Discover Signature Look: Fashion Forward and Fabulous! "
        },
        {
          "type": "textarea",
          "label": "Button Label",
          "id": "button_label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "label": "Button Url",
          "id": "button_url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom SlideShow"
    }
  ]
}
{% endschema %}
